<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-6 searchArea">
          <h2 id="searchText" style="text-align: center;">Find Nannies In Your Area:</h2>
          <hr>
        <div class="input-group input-group-lg searchField">
        <input type="text" class="form-control" style="color:black" id="searchNanny" aria-label="citySearch" placeholder="enter your city" aria-describedby="inputGroup-sizing-lg">
        <button type="button" class="searchBtn"><a href="/api/nannies/"><i class="fas fa-search"></i></a></button>
        </div> 
    </div>   
</div>
<br>
<hr>

                   
{{#each allNanny as |nanny|}}
<div class="container">
  <div class="row">
  <div class="col-12">
    <div class="card card-margin">
      <div class="card-body">
        <div class="row search-body">
          <div class="col-lg-12">
            <div class="search-result">
              <div class="result-header">
                <div class="result-body">
                  <div class="table-responsive">
                    {{> nanny-details}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{/each}}
                


<script src="/js/search.js"></script>





