{{!-- RENDERS A TABLE FOR EACH NANNY IN THE DB THAT MATCHES THE SEARCH CITY --}}
<table class="table class-1">
  <tbody>
    <tr>
      <td>
        <div class="class-1-job-emp-img">
          <img
            id="nannyImage"
            class="img-fluid"
            src="/assets/{{filename}}"
            alt="personalPhoto"
          />
        </div>
      </td>
      <td>
        <div class="class-1-name-skills">
          <p>Name: {{username}}</p>
          <p class="m-0 languages">Languages:
            {{languages}}</p>
        </div>
      </td>
      <td>
        <div class="class-1-availability-info">
          <p class="type m-0">{{gender}}</p>
          <p class="text-muted m-0 location">Location:
            {{location}}</p>
        </div>
      </td>
      <td>
        <div class="class-1-job-salary">Experience:
          {{years_experience}}
          year(s)</div>
      </td>

      <td>
        <div class="class-1-job-category bg-soft-base">
          <span>Education Level: {{education}}</span>
        </div>
        <br />
{{!-- BUTTON FOR THE PARENT/USER TO SHARE THEIR CONTACT INFO WITH THAT PARTICULAR NANNY --}}
        <button name={{id}} class="contactLink">Share Contact Info!</button>
        <div class="contacted" id={{id}}>Successfully Shared Info!</div>
      </td>
    </tr>

  </tbody>
</table>